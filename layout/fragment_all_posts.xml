<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context="com.example.database.MainActivity">

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/messages_list"
		android:layout_width="match_parent"
		android:layout_height="435dp"
		android:layout_gravity="bottom"
		android:clipToPadding="false"
		android:paddingStart="@dimen/cardview_margin_8"
		android:paddingTop="@dimen/cardview_margin_4"
		android:paddingEnd="@dimen/cardview_margin_8"
		android:paddingBottom="@dimen/cardview_margin_4"
		android:scrollbarStyle="outsideInset"
		android:scrollbars="vertical"
		tools:listitem="@layout/item_post" />

	<ImageView
		android:id="@+id/imageView"
		android:layout_width="match_parent"
		android:layout_height="113dp"
		android:scaleX="1.5"
		app:srcCompat="@drawable/crowdfunding_header" />

</FrameLayout>